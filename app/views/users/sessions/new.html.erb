<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h3>ログイン</h3>
    <%= form_with(url: users_sign_in_path, scope: :session) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
